{
  "coc.preferences.formatOnSaveFiletypes": [
    "rust",
    "json",
    "typescript",
    "typescriptreact",
    "toml",
    "cpp",
    "c",
    "java",
    "cs",
    "python",
    "javascript",
    "zig",
    "haskell"
  ],
  "diagnostic.checkCurrentLine": true,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextCurrentLineOnly": false,
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp"],
      "rootPatterns": [".ccls", "compile_commands.json"],
      "initializationOptions": {
        "cache": {
          "directory": "/home/hector/.cache/ccls"
        }
      }
    },
    "zls": {
      "command": "/sbin/zls",
      "filetypes": ["zig"],
      "rootPatterns": ["source.zig", "Source.zig", "build.zig"],
      "initializationOptions": {}
    },
    "csharp": {
      "command": "csharp-ls",
      "filetypes": ["cs"],
      "rootPatterns": ["*.sln"]
    },
    "haskell": {
      "command": "haskell-language-server",
      "args": ["--lsp"],
      "rootPatterns": [
        ".stack.yaml",
        ".hie-bios",
        "BUILD.bazel",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": ["hs", "lhs", "haskell"]
    }
  }
}
